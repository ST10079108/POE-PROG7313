<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Budget">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/piggy_pink"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="262dp"
            android:layout_height="61dp"
            android:gravity="center"
            android:text="Budget"
            android:textStyle="bold"
            android:textColor="@color/piggy_black"
            android:textAlignment="center"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:gravity="center"
            android:text="Create Budget"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/piggy_white"
            android:background="@color/piggy_black"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textAlignment="textStart"
            android:textColor="@color/piggy_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="266dp"
            android:layout_height="52dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_corners"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:text="Budget Name" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textAlignment="textStart"
            android:textColor="@color/piggy_black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="266dp"
            android:layout_height="52dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_corners"
            android:ems="10"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:text="100000" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:text="Frequency"
            android:textAlignment="textStart"
            android:textColor="@color/piggy_black"
            android:textSize="16sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="266dp"
            android:layout_height="52dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_corners"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:text="Monthly" />

        <TextView
            android:id="@+id/textView26"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textAlignment="textStart"
            android:textColor="@color/piggy_black"
            android:textSize="16sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editTextText33"
            android:layout_width="266dp"
            android:layout_height="52dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_corners"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:text="Transportation" />

        <TextView
            android:id="@+id/textView222"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textAlignment="textStart"
            android:textColor="@color/piggy_black"
            android:textSize="16sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editTextText4"
            android:layout_width="266dp"
            android:layout_height="52dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rounded_corners"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:text="1st day" />

        <Button
            android:id="@+id/addButton"
            android:layout_width="180dp"
            android:layout_height="64dp"
            android:backgroundTint="@color/piggy_black"
            android:text="Add"
            android:textSize="15sp" />
        <Button
            android:id="@+id/myBudgetsButton"
            android:layout_width="180dp"
            android:layout_height="64dp"
            android:backgroundTint="@color/piggy_black"
            android:text="My Budgets"
            android:textSize="15sp" />


    </LinearLayout>

</LinearLayout>